<div class="contentbottom">
  <div class="contentsep"><img src="images/spacer.gif" alt="" border="0" /></div>

  <h2 style="float:left;margin-left:90px;">Here are your books members would like to borrow</h2>

  <%@request_list.each do |list|%>
   <h3 style="float:left;margin-left:90px;"><%=list.borrower_name%> would like to borrow a book.</h3>
   <div class="contentsep"><img src="images/spacer.gif" alt="" border="0" /></div>
    <img src="images/85x63.gif" alt="" class="borrowerImage" />
  <div class="greybox">
    <div class="greybox_con">
      <div class="headingcontent">Book Title:</div><div class="datacontent">test<%=list.book_title%></div>
      <div class="headingcontent">Date of request:</div><div class="datacontent"><%=list.date_of_request%></div>
      <div class="headingcontent">Return date:</div><div class="datacontent">Coming soon..</div>
      <!--<span class="fontitalic"> Lorem ipsum dolor sit amet, </span> </div>-->
    <button id="submitButton" class="greenButton" onclick="window.location = '/accept_request/<%=list.id%>'" type="submit">Yes</button>
    <button id="submitButton" class="redButton" onclick="window.location = '/reject_request/<%=list.id%>'" type="submit">No</button>
    <button id="submitButton" class="orangeButton" onclick="window.location = '/loaned_out/<%=list.id%>'" type="submit">Loaned Out Already</button>
  </div>
  </div>
    <div class="contentsep"><img src="images/spacer.gif" alt="" border="0" /></div>
  <%end%>


 <%@sent_list.each do |list|%>
     <h3 style="float:left;margin-left:90px;color:#01DF3A;"><%=list.borrower_name%> still has your book.</h3>
   <div class="contentsep"><img src="images/spacer.gif" alt="" border="0" /></div>
    <img src="images/85x63.gif" alt="" class="borrowerImage" />
  <div class="greenbox">
    <div class="greenbox_con">
      <div class="headingcontent">Book Title:</div>
      <div class="headingcontent">Date of request:</div>
      <div class="headingcontent">Return date:</div>
    <button id="submitButton" class="greenButton" onclick="return false;" type="submit">Received</button>
  </div>
  </div>
    <div class="contentsep"><img src="images/spacer.gif" alt="" border="0" /></div>
 <%end%>


 <%@over_due_list.each do |list|%>
     <h3 style="float:left;margin-left:90px;color:#FD030C;"><%=list.borrower_name%> still has your book.</h3>
   <div class="contentsep"><img src="images/spacer.gif" alt="" border="0" /></div>
      <img src="images/85x63.gif" alt="" class="borrowerImage" />
  <div class="redbox">
    <div class="redbox_con">
      <div class="headingcontent">Book Title:</div>
      <div class="headingcontent">Date of request:</div>
      <div class="headingcontent">Return date:</div>
    <button id="submitButton" class="orangeButton" onclick="return false;" type="submit">Overdue book</button>
  </div>
  </div>
       <div class="contentsep"><img src="images/spacer.gif" alt="" border="0" /></div>
 <%end%>




