<div id="account_form">
  <%= form_for @user, :html => { :multipart => true } do |f| %>
    <% if @user.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@user.errors.count, "error") %> prohibited this tag from being saved:</h2>

        <ul>
          <% @user.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>


    <div style="float:left; width: 40%; height:100%;">
      <div class="field">
        <%= f.label "Name" %><br />
        <%= f.text_field :full_name %>
      </div>
      <div class="field">
        <%= f.label :email %><br />
        <%= f.text_field :email %>
      </div>
      <div class="field">
        <%= f.label :phone %><br />
        <%= f.text_field :phone %>
      </div>
      <div class="field">
        <%= f.label :shipping_address %><br />
        <%= f.text_field :shipping_address %>
      </div>
      <div class="field">
        <%= f.label :city %><br />
        <%= f.text_field :city %>
      </div>
      <div class="field">
        <%= f.label :zip %><br />
        <%= f.text_field :zip %>
      </div>
      <div class="field">
        <%= f.label :shelf_name %><br />
        <%= f.text_field :shelf_name %>
      </div>
      <div class="field">
        <%= f.label :shelf_location %><br />
        <%= f.text_field :shelf_location %>
      </div>

    </div>
    <div style="float:right; width: 60%">
      <div style="float:left; width: 50%">
        <% if @user.profile_image.exists? then %>
          <%= image_tag @user.profile_image.url(:thumb) %>
        <% end %><br/>
        <%= f.label "Profile Image" %><br />
        <%= f.file_field :profile_image %>
      </div>

      <div style="float:right; width:50%">
        <% if @user.shelf_image.exists? then %>
          <%= image_tag @user.shelf_image.url(:thumb) %>
        <% end %><br/>
        <%= f.label "Shelf Image" %><br />
        <%= f.file_field :shelf_image %>
      </div>

      <div class="field" style="float:left;width: 100%" >
        <h3>How much information do you want and when?</h3>
        <label>Lookshelf Notifications</label>
        <%= f.radio_button :lookshelf_notification, "true" %> Weekly
        <%= f.radio_button :lookshelf_notification, "false" %> Daily <br/>
        <label>News Feeds</label>
        <%= f.radio_button :news_feed, "true" %> Yes
        <%= f.radio_button :news_feed, "false" %> No <br/>
        <label>Event Notifications</label>
        <%= f.radio_button :event_notification, "true" %> Yes
        <%= f.radio_button :event_notification, "false" %> No <br/>
      </div>
    </div>
    <div class="actions" style="float:left;">
      <%= f.submit "Update Account",  :class => "regular" %>
    </div>
  <% end %>
</div>
